{
	"name": "language-next",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"pages:build": "pnpm next-on-pages",
		"preview": "pnpm pages:build && wrangler pages dev",
		"deploy": "pnpm pages:build && wrangler pages deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "wrangler d1 migrations apply language-db --local",
		"db:migrate:prod": "wrangler d1 migrations apply language-db --remote"
	},
	"dependencies": {
		"dayjs": "^1.11.13",
		"drizzle-kit": "^0.30.4",
		"drizzle-orm": "^0.39.3",
		"next": "15.1.6",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@cloudflare/next-on-pages": "1",
		"@cloudflare/workers-types": "^4.20250204.0",
		"@eslint/eslintrc": "^3",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint": "^9",
		"eslint-config-next": "15.1.6",
		"postcss": "^8",
		"tailwindcss": "^3.4.1",
		"typescript": "^5",
		"vercel": "^41.1.0",
		"wrangler": "^3.108.1"
	}
}